{
  "name": "Run.it",
  "description": "Run a terminal command directly from the browser.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "./images/icon_16.png",
      "32": "./images/icon_32.png",
      "48": "./images/icon_48.png",
      "128": "./images/icon_128.png"
    }
  },
  "permissions": [
    "storage", 
    "contextMenus", 
    "notifications", 
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/",
    "file://*/"
  ],
  "icons": {
    "16": "./images/icon_16.png",
    "32": "./images/icon_32.png",
    "48": "./images/icon_48.png",
    "128": "./images/icon_128.png"
  }
}
